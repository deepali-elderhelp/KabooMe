<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:clickable="true"
    style="@android:style/Widget.ActionButton">

    <ImageView
        android:id="@+id/base_invitation"
        android:src="@drawable/invitations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="0dp"
        android:contentDescription="bell"
        />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/new_invitations"
        android:layout_width="wrap_content"
        android:minWidth="10dp"
        android:textSize="8sp"
        android:textColor="#ffffffff"
        android:layout_height="wrap_content"
        android:text="@null"
        android:layout_alignTop="@id/base_invitation"
        android:layout_alignRight="@id/base_invitation"
        android:layout_marginRight="0dp"
        android:layout_marginTop="3dp"
        android:paddingLeft="2dp"
        android:layout_marginLeft="2dp"


        android:background="@drawable/red_dots"/>
</RelativeLayout>