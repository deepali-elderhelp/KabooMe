<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    >

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/video_urgent_rcvd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/urgent_message_small"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/video_bubble_rcvd"
        app:layout_constraintStart_toEndOf="@id/video_bubble_rcvd"
        app:layout_constraintLeft_toRightOf="@id/video_bubble_rcvd"
        app:layout_constraintTop_toTopOf="@id/video_bubble_rcvd" />

    <TextView
        android:id="@+id/videoNewMessagesLabel_rcvd"
        style="@style/DateHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/new_messages_header_back"
        android:gravity="center"
        android:text="New Messages"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_user_profile_rcvd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/account_gray_192"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/video_bubble_rcvd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_goneMarginBottom="10dp"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/videoNewMessagesLabel_rcvd"
        app:layout_constraintStart_toEndOf="@id/image_user_profile_rcvd"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bubble_received_1_nine"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:id="@+id/video_user_alias_rcvd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Alias"
            android:textStyle="bold"
            style="@style/ChatLabels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/video_user_role_rcvd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Role"
            android:textStyle="bold"
            style="@style/ChatRole"
            app:layout_constraintStart_toEndOf="@id/video_user_alias_rcvd"
            app:layout_constraintTop_toTopOf="parent"/>

        <FrameLayout
            android:id="@+id/video_bubble_frame_rcvd"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_user_alias_rcvd"
            >

            <ImageView
                android:id="@+id/video_bubble_image_rcvd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/attachment_default" />



            <FrameLayout
                android:id="@+id/video_play_frame_rcvd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/video_play_background"
                >
                <ImageView
                    android:id="@+id/video_play_rcvd"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/video_play_png"
                    android:visibility="visible"
                    />

                <ImageView
                    android:id="@+id/video_alert_rcvd"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/alert_circle"
                    android:visibility="gone"
                    android:tint="@color/white"
                    />

            </FrameLayout>


            <ProgressBar
                android:id="@+id/video_upload_progress_rcvd"
                android:layout_width="150dp"
                android:layout_height="150dp"
                style="?android:progressBarStyleLarge"
                android:progress="10"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/circular_determinate_pb"/>


        </FrameLayout>

        <TextView
            android:id="@+id/video_message_rcvd"
            style="@style/ChatNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing stuff not showing initially but then it started to roll into something bigger and bigger and bigger"
            app:layout_constraintTop_toBottomOf="@id/video_bubble_frame_rcvd"
            app:layout_constraintStart_toStartOf="@id/video_bubble_frame_rcvd"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/video_time_rcvd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:45 pm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_message_rcvd"
            style="@style/ChatTime"/>

        <ImageView
            android:id="@+id/video_bubble_download_rcvd"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@drawable/download"
            app:layout_constraintTop_toBottomOf="@id/video_message_rcvd"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"/>


