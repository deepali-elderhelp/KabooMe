<!--            />-->

        <RadioGroup
            android:id="@+id/edit_group_notifications_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/editGroupNotificationGuidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/editGroupNotificationGuidelineStart"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            style="@style/GroupInfoLabelsSmall"
            android:orientation="vertical"
            android:paddingTop="25dp"
            >
            <!-- Need to add Text View below because the text: on RadioGroup does not work-->
            <TextView
                android:id="@+id/edit_group_notifications_group_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                style="@style/GroupInfoLabelsSmall"/>

            <RadioButton
                android:id="@+id/edit_group_notifications_group_urgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/edit_group_notifications_urgent"
                android:drawableEnd="@drawable/urgent_message"
                style="@style/GroupNotificationsLevels"/>

            <ImageView
                android:id="@+id/group_notifications_divider_line_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/group_info_line_divider"
                 />

            <RadioButton
                android:id="@+id/edit_group_notifications_group_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_group_notifications_all"
                android:drawableEnd="@drawable/notification_all_active"
                style="@style/GroupNotificationsLevels"
                android:checked="true"/>

            <ImageView
                android:id="@+id/group_notifications_divider_line_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/group_info_line_divider"
                />

            <RadioButton
                android:id="@+id/edit_group_notifications_group_none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_group_notifications_off"
                android:drawableEnd="@drawable/notification_off"
                style="@style/GroupNotificationsLevels"/>

        </RadioGroup>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_group_notification"
            style="@style/GradientButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/save"
            app:layout_constraintEnd_toEndOf="@+id/editGroupNotificationGuidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/editGroupNotificationGuidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/edit_group_notifications_group"
            app:layout_constraintBottom_toBottomOf="parent"
            android:enabled="false"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>