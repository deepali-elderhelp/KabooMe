<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.views.features.groupSearch.ScanQRCodeGalleryFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_gallery_qr__vertical_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_gallery_qr_vertical_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gallery_qr_not_found_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_gallery_qr__vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_gallery_qr_vertical_end"
        android:visibility="gone">

        <ImageView
            android:id="@+id/gallery_qr_sad_face"
            android:layout_width="@dimen/group_actions_dialog_image_width"
            android:layout_height="@dimen/group_actions_dialog_image_height"
            android:layout_marginTop="29dp"
            android:src="@drawable/sad_face"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/qr_gallery_sorry_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gallery_qr_sad_face"
            style="@style/GroupQRLabelsNormal"
            android:text="Sorry, could not read it!"
            ></TextView>

        <TextView
            android:id="@+id/qr_gallery_try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textColorLink="@color/colorAccent"
            android:textSize="14sp"
            android:text="@string/try_again"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/qr_gallery_sorry_text"
            app:layout_constraintEnd_toEndOf="@id/qr_gallery_sorry_text"
            app:layout_constraintTop_toBottomOf="@+id/qr_gallery_sorry_text" />

        <TextView
            android:id="@+id/qr_gallery_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textColorLink="@color/colorAccent"
            android:textSize="14sp"
            android:text="@string/go_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintEnd_toEndOf="@id/qr_gallery_sorry_text"
            app:layout_constraintTop_toBottomOf="@+id/qr_gallery_sorry_text"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
