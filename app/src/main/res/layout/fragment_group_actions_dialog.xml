        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/group_actions_qr_code_icon"
        app:layout_constraintLeft_toRightOf="@id/guideline_dialog_actions_vertical"
        android:layout_marginTop="32dp"
        style="@style/GroupActionsLabelsSmall"
        android:text="Group Info"/>

    <ImageView
        android:id="@+id/group_action_divider_line_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
