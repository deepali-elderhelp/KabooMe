    <ImageView
        android:id="@+id/group_action_divider_line_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/group_info_line_divider"
        app:layout_constraintTop_toBottomOf="@id/group_actions_requests"
        app:layout_constraintStart_toStartOf="@id/guideline_dialog_actions_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"/>


    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/group_actions_requests_count_frame"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline_mess_attach_vertical_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/group_action_divider_line_2"
        app:layout_constraintBottom_toBottomOf="@id/group_action_divider_line_3"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/group_actions_requests_count_image"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/primary_dots"
            ></ImageView>
        <TextView
            android:id="@+id/group_actions_requests_count_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="0"
            android:textAlignment="center"
