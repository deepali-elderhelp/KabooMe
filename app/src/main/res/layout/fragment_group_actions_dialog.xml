    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_dialog_actions_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.22"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mess_attach_vertical_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.82"/>

    <ImageView
        android:id="@+id/group_actions_messages_icon"
        android:layout_width="@dimen/group_actions_icon_width"
        android:layout_height="@dimen/group_actions_icon_height"
        android:src="@drawable/bs_messages"
        app:layout_constraintTop_toBottomOf="@id/guideline_conv_user_action_vertical_middle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline_dialog_actions_vertical"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/group_actions_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline_conv_user_action_vertical_middle"
        app:layout_constraintLeft_toRightOf="@id/guideline_dialog_actions_vertical"
        android:layout_marginTop="32dp"
        style="@style/GroupActionsLabelsSmall"
        android:text="Messages"/>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/group_actions_messages_unread"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline_mess_attach_vertical_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_conv_user_action_vertical_middle"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/group_actions_unread_image"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/inactive_dots"
            ></ImageView>
        <TextView
            android:id="@+id/group_actions_unread_count_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="0"
            android:textAlignment="center"
            />

    </FrameLayout>

    <ImageView
        android:id="@+id/group_action_divider_line_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/group_info_line_divider"
        app:layout_constraintTop_toBottomOf="@id/group_actions_messages"
        app:layout_constraintStart_toStartOf="@id/guideline_dialog_actions_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/group_actions_invite_icon"
        android:layout_width="@dimen/group_actions_icon_width"
        android:layout_height="@dimen/group_actions_icon_height"
        android:src="@drawable/bs_invite_member"
        app:layout_constraintTop_toBottomOf="@id/group_actions_messages_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline_dialog_actions_vertical"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/group_actions_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/group_actions_messages_icon"
        app:layout_constraintLeft_toRightOf="@id/guideline_dialog_actions_vertical"
        android:layout_marginTop="32dp"
        style="@style/GroupActionsLabelsSmall"
        android:text="Invite Member"/>

    <ImageView
        android:id="@+id/group_actions_requests_icon"
        android:layout_width="@dimen/group_actions_icon_width"
        android:layout_height="@dimen/group_actions_icon_height"
        android:src="@drawable/bs_requests"
        app:layout_constraintTop_toBottomOf="@id/group_actions_invite_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline_dialog_actions_vertical"
        android:layout_marginTop="32dp"/>

    <ImageView
        android:id="@+id/group_action_divider_line_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/group_info_line_divider"
        app:layout_constraintTop_toBottomOf="@id/group_actions_invite"
        app:layout_constraintStart_toStartOf="@id/guideline_dialog_actions_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/group_actions_requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/group_actions_invite_icon"
        app:layout_constraintLeft_toRightOf="@id/guideline_dialog_actions_vertical"
        android:layout_marginTop="32dp"
        style="@style/GroupActionsLabelsSmall"
        android:text="Requests"/>

