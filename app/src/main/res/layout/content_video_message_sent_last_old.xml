<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    >


    <ImageView
        android:id="@+id/urgent_video_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/video_bubble_sent"
        app:layout_constraintBottom_toBottomOf="@id/video_bubble_sent"
        app:layout_constraintEnd_toStartOf="@id/video_bubble_sent"
        app:layout_constraintRight_toLeftOf="@id/video_bubble_sent"
        android:src="@drawable/urgent_message_small"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/videoNewMessagesLabel"
        style="@style/DateHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Messages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/new_messages_header_back"
        android:gravity="center"
        android:elevation="10dp"
        android:visibility="gone"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/video_user_profile"
        android:layout_width="@dimen/message_sent_sender_image_width"
        android:layout_height="@dimen/message_sent_sender_image_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/account_gray_192"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/video_bubble_sent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="8dp"
        app:layout_goneMarginBottom="10dp"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintTop_toBottomOf="@id/videoNewMessagesLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/video_user_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rectangle_sent_2_nine"
        >

<!--    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--        android:id="@+id/video_bubble_sent"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
