    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/group_search_join_group"
        style="@style/SmallGradientButton"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="@string/join"
        app:layout_constraintEnd_toEndOf="@+id/guideline_group_search_vertical_end"
        app:layout_constraintStart_toEndOf="@+id/guideline_group_search_name_vertical_end"
        app:layout_constraintTop_toTopOf="@id/group_search_list_item_group_name"
        app:layout_constraintBottom_toBottomOf="@id/group_search_list_item_group_name"

        />

    <ImageView
        android:id="@+id/group_search_item_divider_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/group_info_line_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_conv_user_action_vertical_middle"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

