<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/conv_li_fr_list_item_parent_layout">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_conv_list_item_vertical_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_conv_list_item_vertical_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_conv_list_item_horizontal_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_conv_list_item_horizontal_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_conv_user_action_vertical_middle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.22"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_expiry_details"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_conv_name_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_unread_details"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.82"/>

    <FrameLayout
        android:id="@+id/conv_li_fr_list_item_conv_image_frame"
        android:layout_width="@dimen/user_group_list_image_width"
        android:layout_height="@dimen/user_group_list_image_height"
        app:layout_constraintStart_toStartOf="@id/guideline_conv_list_item_vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_conv_user_action_vertical_middle"
        app:layout_constraintTop_toTopOf="@id/guideline_conv_list_item_horizontal_start"
        app:layout_constraintBottom_toBottomOf="@id/guideline_conv_list_item_horizontal_end">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/conv_li_fr_list_item_conv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />

        <ProgressBar
            android:id="@+id/conv_li_fr_list_item_conv_image_progress"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:indeterminateDrawable="@drawable/custom_progress_bar_small"
            android:indeterminateDuration="1000"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
                android:id="@+id/conv_li_fr_list_item_conv_name"
                style="@style/group_list_group_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/guideline_conv_user_action_vertical_middle"
                app:layout_constraintEnd_toEndOf="@id/guideline_conv_name_end"
                app:layout_constraintTop_toTopOf="@id/conv_li_fr_list_item_conv_image_frame"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="Sample Conversation Name" />

    <TextView
        android:id="@+id/conv_li_fr_list_item_user_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline_expiry_details"
        app:layout_constraintEnd_toEndOf="@id/guideline_conv_list_item_vertical_end"
        app:layout_constraintTop_toTopOf="@id/conv_li_fr_list_item_conv_name"
        android:text="User left group"
        style="@style/expiry_warning"
        android:gravity="bottom"

        />
            <TextView
                android:id="@+id/conv_li_fr_list_item_conv_message"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/guideline_conv_user_action_vertical_middle"
                app:layout_constraintEnd_toEndOf="@id/guideline_expiry_details"
                app:layout_constraintTop_toBottomOf="@id/conv_li_fr_list_item_conv_name"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                style="@style/group_list_last_message"
                android:gravity="left"
                android:text="testing really long messages, why are they getting truncated way too ealier than usual, not sure, but again adding something bigger is what I live for "
                />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/guideline_expiry_details"
        app:layout_constraintEnd_toEndOf="@id/guideline_unread_details"
        app:layout_constraintTop_toBottomOf="@id/conv_li_fr_list_item_conv_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="3dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/conv_li_fr_list_item_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="11:40 pm"
            android:ellipsize="end"
            style="@style/message_time"/>

        <TextView
            android:id="@+id/conv_li_fr_list_item_message_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Yesterday"
            android:ellipsize="end"
            style="@style/message_time"/>




    </LinearLayout>


                    <FrameLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/conv_li_fr_list_item_unread_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/guideline_unread_details"
                        app:layout_constraintEnd_toEndOf="@id/guideline_conv_list_item_vertical_end"
                        app:layout_constraintBottom_toBottomOf="@id/guideline_conv_list_item_horizontal_end"

                        >
                        <ImageView
                            android:id="@+id/unread_image"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:src="@drawable/inactive_dots"
                            ></ImageView>
                        <TextView
                            android:id="@+id/conv_li_fr_list_item_unread_count_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#fff"
                            android:textSize="15sp"
                            android:text="0"
                            android:textAlignment="center"
                            />

                    </FrameLayout>

    <ImageView
        android:id="@+id/group_info_divider_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/group_info_line_divider"
        app:layout_constraintStart_toStartOf="@id/guideline_conv_user_action_vertical_middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
