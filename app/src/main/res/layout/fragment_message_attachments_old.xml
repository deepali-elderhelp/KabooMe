<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/bottom_sheet_behavior"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mess_attach_hori_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_conv_user_action_hori_middle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mess_attach_hori_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mess_attach_vertical_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mess_attach_vertical_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>


    <LinearLayout
        android:id="@+id/message_attach_item_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/guideline_mess_attach_hori_top"
        app:layout_constraintBottom_toBottomOf="@id/guideline_conv_user_action_hori_middle"
        app:layout_constraintStart_toStartOf="@id/guideline_mess_attach_vertical_start"
        app:layout_constraintRight_toLeftOf="@id/message_attach_item_camera"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/message_attach_img1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/camera"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/message_attach_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/camera"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_attach_item_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/guideline_mess_attach_hori_top"
        app:layout_constraintBottom_toBottomOf="@id/guideline_conv_user_action_hori_middle"
        app:layout_constraintStart_toStartOf="@id/guideline_mess_attach_vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_mess_attach_vertical_end"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/message_attach_img2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/gallery"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/message_attach_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/gallery"/>

    </LinearLayout>







    <LinearLayout
        android:id="@+id/message_attach_item_video_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/guideline_mess_attach_hori_top"
        app:layout_constraintBottom_toBottomOf="@id/guideline_conv_user_action_hori_middle"
        app:layout_constraintEnd_toEndOf="@id/guideline_mess_attach_vertical_end"
        app:layout_constraintLeft_toRightOf="@id/message_attach_item_gallery"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/message_attach_img3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/video_record"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/message_attach_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/record"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_attach_item_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/guideline_conv_user_action_hori_middle"
        app:layout_constraintBottom_toBottomOf="@id/guideline_mess_attach_hori_bottom"
        app:layout_constraintStart_toStartOf="@id/guideline_mess_attach_vertical_start"
        app:layout_constraintLeft_toRightOf="@id/message_attach_item_audio"
        android:orientation="vertical">



    <ImageView
        android:id="@+id/message_attach_img4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/video"
        android:layout_gravity="center"

        />

    <TextView
        android:id="@+id/message_attach_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/video"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_attach_item_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/guideline_conv_user_action_hori_middle"
        app:layout_constraintBottom_toBottomOf="@id/guideline_mess_attach_hori_bottom"
        app:layout_constraintStart_toStartOf="@id/guideline_mess_attach_vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_mess_attach_vertical_end"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/message_attach_img5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/audio"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/message_attach_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/audio"/>

    </LinearLayout>






    <LinearLayout
        android:id="@+id/message_attach_item_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/guideline_conv_user_action_hori_middle"
        app:layout_constraintBottom_toBottomOf="@id/guideline_mess_attach_hori_bottom"
        app:layout_constraintEnd_toEndOf="@id/guideline_mess_attach_vertical_end"
        app:layout_constraintLeft_toRightOf="@id/message_attach_item_audio"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/message_attach_img6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/contacts"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/message_attach_text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/contacts"/>

    </LinearLayout>










</androidx.constraintlayout.widget.ConstraintLayout>