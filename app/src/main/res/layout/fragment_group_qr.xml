<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.views.features.groupQRCode.GroupQRFragment">


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:scrollbars="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_group_qr_code_vertical_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_group_qr_code_vertical_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_group_qr_code_horizontal_image_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"/>

        <TextView
            android:id="@+id/group_qr_code_name"
            style="@style/GroupQRLabels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Group Name"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_image_frame"></TextView>

        <TextView
            android:id="@+id/group_qr_code_public_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="13dp"
            android:text="Public Group"
            style="@style/GroupQRLabelsSmall"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_name">></TextView>

        <FrameLayout
            android:id="@+id/group_qr_code_image_frame"
            android:layout_width="@dimen/group_actions_dialog_image_width"
            android:layout_height="@dimen/group_actions_dialog_image_height"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toTopOf="parent"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/group_qr_code_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <ProgressBar
                android:id="@+id/group_qr_code_image_progress"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:indeterminateDrawable="@drawable/custom_progress_bar_small"
                android:indeterminateDuration="1000"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/group_qr_code_description"
            style="@style/GroupQRLabelsNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Coordination Room 23 business needs what happens whenwjkndsnksndfjdsfjdsjfnjdsfjdjns"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_public_private" />


        <TextView
            android:id="@+id/group_qr_code_label_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GroupQRLabels"
            android:layout_margin="15dp"
            android:text="@string/group_qr_label_1"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_description"
            />

        <ImageView
            android:id="@+id/group_qr_code_qr_image"
            android:layout_width="190dp"
            android:layout_height="190dp"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_label_1"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/group_qr_code_label_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/GroupQRLabels"
            android:layout_marginTop="15dp"
            android:text="@string/group_qr_label_2"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_qr_image"
            />

        <TextView
            android:id="@+id/group_qr_code_label_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/GroupQRLabelsNormal"
            android:layout_marginTop="15dp"
            android:text="@string/group_qr_label_3"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_label_2"
            />

        <TextView
            android:id="@+id/group_qr_code_label_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/GroupQRLabelsNormal"
            android:layout_marginTop="15dp"
            android:text="@string/group_qr_label_4"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_label_3"
            />


        <TextView
            android:id="@+id/group_qr_code_label_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/GroupQRLabelsNormal"
            android:layout_marginTop="15dp"
            android:text="@string/group_qr_label_5"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_label_4"
            />

        <TextView
            android:id="@+id/group_qr_code_label_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/GroupQRLabelsNormal"
            android:layout_marginTop="15dp"
            android:text="@string/group_qr_label_6"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_label_5"
            />

        <TextView
            android:id="@+id/group_qr_code_label_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/GroupQRLabelsNormal"
            android:layout_marginTop="15dp"
            android:text="@string/group_qr_label_7"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_label_6"
            />

        <TextView
            android:id="@+id/group_qr_code_label_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/GroupQRLabels"
            android:layout_marginTop="15dp"
            android:text="@string/group_qr_label_8"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_label_7"
            />

        <TextView
            android:id="@+id/group_qr_code_app_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/group_qr_app_link"
            style="@style/GroupQRLabelsSmall"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="@id/guideline_group_qr_code_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_label_8"
            />

        <ImageView
            android:id="@+id/qr_code_for_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="@id/guideline_group_qr_code_vertical_end"
            app:layout_constraintTop_toBottomOf="@id/group_qr_code_label_8"
            android:layout_margin="10dp"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
