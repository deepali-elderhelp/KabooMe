        <LinearLayout
            android:id="@+id/messages_send_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/messages_priority_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_two"
                android:weightSum="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="0.8"
                >



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/normal_button"
                    style="@style/SmallGreyGradientButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/normal"
                    android:textAllCaps="false"
                    android:layout_weight="0.2"

                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/urgent_button"
                    style="@style/SmallGreyGradientButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/urgent"
                    android:textAllCaps="false"
                    android:layout_weight="0.2"
                    />






            </LinearLayout>


            <com.java.kaboome.presentation.views.widgets.MessageInput
                android:id="@+id/fr_gr_me_layout_chatbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white_two"
                app:inputHint="@string/hint_enter_a_message"
                app:showAttachmentButton="true"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/sendPrivateMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:linksClickable="true"
                android:background="@color/white_two"
                android:textColor="@color/colorPrimary"
                android:textColorLink="@color/colorAccent"
                android:textSize="15sp"
                android:text="@string/send_private_message" />

        </LinearLayout>

