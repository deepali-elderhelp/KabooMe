<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/groupMessagesAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/groupMessagesToolbar"
            style="@style/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/app_name"
            app:layout_scrollFlags="scroll|enterAlways"
            />

    </com.google.android.material.appbar.AppBarLayout>

<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

     >


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_finish_attach_vertical_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_finish_attach_vertical_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />






        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="@id/guideline_finish_attach_vertical_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_finish_attach_vertical_end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white">

            <com.java.kaboome.presentation.views.widgets.MessagesList
                android:id="@+id/fr_gr_me_reyclerview_message_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/linear_send"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_send"
                android:layout_above="@id/fr_gr_me_layout_chatbox"
                android:orientation="horizontal"
                android:background="@color/input_message_background"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:weightSum="1"
                android:gravity="center_horizontal">


                <LinearLayout
                    android:id="@+id/normal_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/urgency_normal_selected_background"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/normal_button_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:text="Normal"
                        android:textSize="12sp"
                        android:textColor="@color/urgency_button_text_color"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/urgent_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/urgency_high_background"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/urgentl_button_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:text="Urgent"
                        android:textSize="12sp"
                        android:textColor="@color/urgency_button_text_color"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                </LinearLayout>



            </LinearLayout>


            <com.java.kaboome.presentation.views.widgets.MessageInput
                android:id="@+id/fr_gr_me_layout_chatbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/input_message_background"
                app:inputHint="@string/hint_enter_a_message"
                app:showAttachmentButton="true"/>

        </RelativeLayout>







</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>