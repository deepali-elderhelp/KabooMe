<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signUpScrollView"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/signUpLogoImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:src="@drawable/ic_main_logo"
            app:layout_constraintEnd_toEndOf="@+id/signUpGuidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/signUpGuidelineStart"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/signUpTitleText"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/create_new_account"
            app:layout_constraintEnd_toEndOf="@+id/signUpGuidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/signUpGuidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/signUpLogoImage" />

        <TextView
            android:id="@+id/signUpLoginText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:linksClickable="true"
            android:textColor="@color/dark_gray"
            android:textColorLink="@color/colorAccent"
            android:textSize="14sp"
            android:text="@string/already_a_member_question"
            app:layout_constraintEnd_toEndOf="@+id/signUpGuidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/signUpGuidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/signUpActionButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signUpActionButton"
            style="@style/GradientButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sign_up"
            app:layout_constraintEnd_toEndOf="@+id/signUpGuidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/signUpGuidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/signUpPhoneInputLayout" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/signUpGuidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/signUpGuidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signUpFullNameInputLayout"
            style="@style/OutlineTextInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/signUpGuidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/signUpGuidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/signUpTitleText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUpFullNameEditText"
                style="@style/OutlineEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/full_name"
                android:inputType="textPersonName|textCapWords"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signUpEmailInputLayout"
            style="@style/OutlineTextInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/signUpGuidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/signUpGuidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/signUpFullNameInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUpEmailEditText"
                style="@style/OutlineEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/signUpEmailValidText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/signUpGuidelineStart"
            app:layout_constraintEnd_toEndOf="@id/signUpGuidelineEnd"
            app:layout_constraintTop_toBottomOf="@id/signUpEmailInputLayout"
            style="@style/GroupInfoSmallDetailsInGrey"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:text="Please enter a valid email. We might need it for verification."
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signUpPhoneInputLayout"
            style="@style/OutlineTextInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/signUpGuidelineEnd"
            app:layout_constraintStart_toEndOf="@+id/signUpCountryCodeView"
            app:layout_constraintTop_toBottomOf="@+id/signUpEmailValidText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUpPhoneEditText"
                style="@style/OutlineEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="1234567890"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:maxLines="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.hbb20.CountryCodePicker
            android:id="@+id/signUpCountryCodeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.5dp"
            android:paddingLeft="10dp"
            app:ccp_defaultNameCode="US"
            app:layout_constraintBottom_toBottomOf="@+id/signUpPhoneInputLayout"
            app:layout_constraintStart_toStartOf="@+id/signUpGuidelineStart"
            app:layout_constraintTop_toTopOf="@+id/signUpPhoneInputLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>





