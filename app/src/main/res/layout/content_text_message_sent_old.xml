<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <include layout="@layout/content_group_new_message_header"-->
<!--        android:id="@+id/new_message_header_in_sent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"/>-->



    <ImageView
        android:id="@+id/urgent_image_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_bubble_sent"
        app:layout_constraintBottom_toBottomOf="@id/text_bubble_sent"
        app:layout_constraintEnd_toStartOf="@id/text_bubble_sent"
        app:layout_constraintRight_toLeftOf="@id/text_bubble_sent"
        android:src="@drawable/urgent_message_small"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/newMessagesLabel"
        style="@style/DateHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Messages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/new_messages_header_back"
        android:gravity="center"
        android:elevation="10dp"
        android:visibility="gone"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_bubble_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_goneMarginBottom="10dp"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/newMessagesLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rectangle_sent_2_nine"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        >
<!--android:layout_marginTop="20dp"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->

        <TextView
            android:id="@+id/text_user_you_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOU - "
            android:textStyle="bold"
            style="@style/ChatLabels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_user_alias_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Alias"
            android:textStyle="bold"
            style="@style/ChatLabels"
            app:layout_constraintStart_toEndOf="@id/text_user_you_sent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_user_role_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Role"
            android:textStyle="bold"
            style="@style/ChatRole"
            app:layout_constraintStart_toEndOf="@id/text_user_alias_sent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_message_sent"
            style="@style/ChatNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing stuff not showing initially but then it started to roll into something bigger and bigger and bigger"
            app:layout_constraintTop_toBottomOf="@id/text_user_alias_sent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_time_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:45 pm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_message_sent"
            style="@style/ChatTime"/>

        <TextView
            android:id="@+id/continue_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="continue.."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_message_sent"
            style="@style/ChatContinueLink"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>







</androidx.constraintlayout.widget.ConstraintLayout>



