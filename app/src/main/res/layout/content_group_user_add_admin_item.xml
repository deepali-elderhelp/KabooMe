<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_info_group_users_parent_layout"
    android:layout_marginTop="13dp"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_add_admin_pic_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_add_admin_alias_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_add_admin_role_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"/>

    <FrameLayout
        android:id="@+id/group_info_group_users_add_admin_image_frame"
        android:layout_width="@dimen/group_user_list_image_width"
        android:layout_height="@dimen/group_user_list_image_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_add_admin_pic_end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/group_info_group_users_add_admin_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <ProgressBar
            android:id="@+id/group_info_group_users_add_admin_image_progress"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:indeterminateDrawable="@drawable/custom_progress_bar_small"
            android:indeterminateDuration="1000"
            android:visibility="gone"/>
    </FrameLayout>

<!--    <de.hdodenhof.circleimageview.CircleImageView-->
<!--        android:id="@+id/group_info_group_users_add_admin_image"-->
<!--        android:layout_width="36dp"-->
<!--        android:layout_height="36dp"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        android:src="@drawable/bs_profile"-->
<!--        />-->

    <TextView
        android:id="@+id/group_info_group_users_add_admin_alias"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@id/guideline_add_admin_pic_end"
        app:layout_constraintEnd_toEndOf="@id/guideline_add_admin_alias_end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        style="@style/GroupInfoLabelsSmall"
        android:text="Rotten Robbie"/>

    <TextView
        android:id="@+id/group_info_group_users_add_admin_role"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@id/guideline_add_admin_alias_end"
        app:layout_constraintEnd_toEndOf="@id/guideline_add_admin_role_end"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/GroupInfoLabelsVerySmall"
        android:text="Gas Station Owner"/>


    <ImageView
        android:id="@+id/group_info_group_users_add_admin_checkbox"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/checkbox_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_add_admin_role_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <ImageView
        android:id="@+id/group_info_group_users_divider_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/group_info_line_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/group_info_group_users_add_admin_alias"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

