<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/audio_urgent_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/urgent_message_small"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/audio_bubble_rcvd"
        app:layout_constraintEnd_toStartOf="@id/audio_bubble_rcvd"
        app:layout_constraintRight_toLeftOf="@id/audio_bubble_rcvd"
        app:layout_constraintTop_toTopOf="@id/audio_bubble_rcvd" />

    <TextView
        android:id="@+id/audioNewMessagesLabel"
        style="@style/DateHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/new_messages_header_back"
        android:gravity="center"
        android:text="New Messages"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/audio_bubble_rcvd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle_sent_2_nine"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audioNewMessagesLabel"
        app:layout_goneMarginBottom="10dp"
        app:layout_goneMarginTop="10dp">


        <LinearLayout
            android:id="@+id/audio_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/audio_seek_bar"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/audio_button_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/alert_circle"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/audio_button_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/audio_play_selector"
                android:layout_gravity="center"
                android:visibility="visible"
                />

            <ImageView
                android:id="@+id/audio_button_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/audio_pause_selector"
                android:layout_gravity="center"
                android:visibility="visible"
                />

            <ImageView
                android:id="@+id/audio_button_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/audio_stop_selector"
                android:layout_gravity="center"
                android:visibility="visible"
                />

            <ImageView
                android:id="@+id/audio_button_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/download_circle"
                android:layout_gravity="center"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/audio_button_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/upload_selector"
                android:layout_gravity="center"
                android:visibility="visible"/>

                />




        </LinearLayout>

