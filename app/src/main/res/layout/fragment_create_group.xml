<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.views.features.createGroup.CreateGroupFragment"
    android:scrollbars="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Other components and views -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_create_group_vertical_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_create_group_vertical_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <ProgressBar
        android:id="@+id/create_group_full_progress_bar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:indeterminateDrawable="@drawable/custom_progress_bar"
        android:indeterminateDuration="1000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="10dp"
        android:visibility="gone"
        />

<!--        <androidx.viewpager.widget.ViewPager-->
<!--            android:id="@+id/co_new_gr_pager"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintStart_toStartOf="@id/guideline_create_group_vertical_start"-->
<!--            app:layout_constraintEnd_toEndOf="@id/guideline_create_group_vertical_end"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--             />-->
    <com.java.kaboome.presentation.views.widgets.CreateGroupViewPager
        android:id="@+id/co_new_gr_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline_create_group_vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_create_group_vertical_end"
        app:layout_constraintTop_toTopOf="parent"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_group_previous_button"
        style="@style/LighterButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="@string/cancel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_create_group_vertical_start"
        app:layout_constraintEnd_toStartOf="@id/create_group_next_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_group_next_button"
        style="@style/GradientButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/next"
        app:layout_constraintStart_toEndOf="@id/create_group_previous_button"
        app:layout_constraintEnd_toEndOf="@id/guideline_create_group_vertical_end"
        app:layout_constraintBottom_toBottomOf="parent"
        android:enabled="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

