                <TextView
                    android:id="@+id/audio_user_you_sent"
                    style="@style/ChatLabels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="YOU - "
                    android:textStyle="bold"
                    android:maxLines="1"
                    />


                <TextView
                    android:id="@+id/audio_user_alias_sent"
                    style="@style/ChatLabels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/audio_user_you_sent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="User Alias"
                    android:textStyle="bold"
                    android:maxLines="1"
                    />

                <TextView
                    android:id="@+id/audio_user_role_sent"
                    style="@style/ChatRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/audio_user_alias_sent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="- Role"
                    android:textStyle="bold"
                    android:maxLines="1"
                    />


        <FrameLayout
            android:id="@+id/audio_play_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/audio_user_you_sent"
            android:background="@drawable/video_play_background"
            >
            <ImageView
                android:id="@+id/video_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/video_play_png"
                android:visibility="visible"
                />


            <ImageView
                android:id="@+id/audio_alert"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/alert_circle"
                android:visibility="gone"
                android:tint="@color/white"
                />

        </FrameLayout>



        <TextView
            android:id="@+id/audio_message_sent"
            style="@style/ChatNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing stuff not showing initially but then it started to roll into something bigger and bigger and bigger"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/audio_play_frame"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/audio_time_sent"
            style="@style/ChatTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:45 pm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/audio_message_sent" />

        <ImageView
            android:id="@+id/audio_download"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/download_selector"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/audio_message_sent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/audio_upload"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/upload"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/audio_message_sent"
            app:layout_constraintStart_toStartOf="parent"
            />

<!--        <ImageView-->
<!--            android:id="@+id/audio_alert"-->
<!--            android:layout_width="wrap_content"-->
